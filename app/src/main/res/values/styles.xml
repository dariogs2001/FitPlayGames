<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Capture The Crown Activity application theme -->
    <style name="CaptureTheCrownTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/capture_the_crown_color</item>
        <item name="colorPrimaryDark">@color/capture_the_crown_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Hot Potato Activity application theme -->
    <style name="HotPotatoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/hot_potato_color</item>
        <item name="colorPrimaryDark">@color/hot_potato_darK</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="AuthTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardView_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:background">@color/very_light_grey</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">0.85</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CardView_Main">
        <item name="android:background">@color/very_light_grey</item>
        <item name="android:radius">20dp</item>
    </style>
    <style name="CardView_Profile">
        <item name="android:background">@color/white</item>
        <item name="android:radius">20dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="CardViewImage">
        <item name="android:paddingBottom">65dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@color/very_light_grey</item>
    </style>
    <style name="CardViewImageHotPotato">
        <item name="android:paddingBottom">65dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@color/hot_potato_color</item>
    </style>
    <style name="CardViewImageCrown">
        <item name="android:paddingBottom">65dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@color/capture_the_crown_color</item>
    </style>

    <style name="challenge_profile_header">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="challenge_profile_header2">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="challenge_profile_text">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
