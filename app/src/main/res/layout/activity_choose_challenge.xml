<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dariogonzalez.fitplaygames.ChooseChallengeActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            style="@style/CardView_Main"
            android:id="@+id/hot_potato"
            android:layout_weight="1"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/thumb_image_hot_potato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_hotpotato"
                style="@style/CardViewImage"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="10dp"
                android:text="Hot Potato"
                style="@style/CardView_TextView"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            style="@style/CardView_Main"
            android:id="@+id/steal_the_flag"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/thumb_image_flag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_flag"
                style="@style/CardViewImage"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="10dp"
                android:text="Steal the Flag"
                style="@style/CardView_TextView"
                />
        </android.support.v7.widget.CardView>
</LinearLayout>
